<link rel="stylesheet" href="dist/css/receipt.css">

<div id="div-receipt" class="row d-flex justify-content-center align-items-center">
  <div class="col-12 col-sm-10  col-lg-8 col-xl-6">
    <div class="card">
      <div class="card-body p-4">
        <div class="row">
          <div class="col-lg-12">
              <p id="thanks">Thank you for buying in our store</p>
              <div id="purchase-download">
                  <div id="purchase-details">
                    <p id="purchase">Purchase details:</p>
                    <p class="padding-left">Name:{{lastOrder.name}}</p>
                    <p class="padding-left">Address:{{lastOrder.address}}</p>
                    <p class="padding-left">Order Date:{{lastOrder.orderDate}}</p>
                    <p class="padding-left">Delivery Date:{{lastOrder.deliveryDate}}</p>
                    <p class="padding-left" id="total-receipt">Total:{{lastOrder.price}}$</p>
                  </div>
                  <div>
                      <button id="download" class="btn btn-success">Download</button>
                  </div>
              </div>
              <div>
                  <table id="receipt" class="col-12">
                      <thead>
                        <tr>
                          <th style="width:5%">#</th>
                          <th style="width:39%">Item</th>
                          <th class="text-right" style="width:18%">Quantity</th>
                          <th class="text-right" style="width:18%">Unit Price</th>
                          <th class="text-right" style="width:20%">Total Price</th>
                        </tr>
                      </thead>
                      <tbody>
                          {{#each lastOrder.products}}
                            <tr>
                              <td>{{this.index}}</td>
                              <td>{{this.name}}</td>
                              <td class="text-right">{{this.quantity}}</td>
                              <td class="text-right">{{this.price}}$</td>
                              <td class="text-right">{{this.total}}$</td>
                            </tr>
                          {{/each}}
                      </tbody>
                  </table>

              </div>
              <div class="d-flex justify-content-center mt-4">
                  <button onclick="window.location.href = '/shop'" class="btn btn-primary">Return to the Shop</button>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>

<script src="dist/js/receipt.js"></script>


