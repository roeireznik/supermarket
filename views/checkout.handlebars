    <div class="container h-100">
      <div id="receipt-add" class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-9">
          <div class="card">
            <div class="card-body ">
  
              <div class="row">
  
                <div class="col-lg-12">
                    <div id="inner-card" class="card .text-success rounded-3">
