  <script>



            $.ajax({
                url:'http://localhost:3030/orders',
                success:function(res){
                    $( "#datepicker" ).datepicker({
                        minDate: 0,
                        maxDate:30,
                        dateFormat: "yy-mm-dd",
                        beforeShowDay: function(date){
                            var string = jQuery.datepicker.formatDate('yy-mm-dd', date);
                            return [ res.indexOf(string) == -1 ]
                        }
                    });
                }
            })
       


  </script>
